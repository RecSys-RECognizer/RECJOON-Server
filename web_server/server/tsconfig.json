{
    "compilerOptions": {
       "lib": [
          "es5",
          "es6",
          "dom",
          "esnext.asynciterable"
       ],
       "target": "es6",
       "module": "commonjs",
       "moduleResolution": "node",
       "baseUrl": ".",
       "outDir": "./dist",
       "emitDecoratorMetadata": true,
       "experimentalDecorators": true,
       "sourceMap": true,
       "allowSyntheticDefaultImports": true,
       "resolveJsonModule": true,
       "esModuleInterop": true,
       "removeComments": true,
    },
    "include": ["src/**/*"],
    "exclude": ["dist/**/*", "node_modules"]
 }